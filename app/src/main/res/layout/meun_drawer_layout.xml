<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.codejies.lyb.widgets.LybIconTextView
        android:id="@+id/item_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Story"
        android:textSize="16sp"
        app:direction="left"
        app:lybDefalutText="@color/color_white"
        app:lybDefaultIcon="@mipmap/bg_meun_default"
        app:lybHighLightIcon="@mipmap/bg_meun_selected"
        app:lybHighLightText="@color/color_dark" />

    <com.codejies.lyb.widgets.LybIconTextView
        android:id="@+id/item_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:textSize="16sp"
        app:direction="left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_story"
        app:lybDefalutText="@color/color_white"
        app:lybDefaultIcon="@mipmap/bg_meun_default"
        app:lybHighLightIcon="@mipmap/bg_meun_selected"
        app:lybHighLightText="@color/color_dark" />
</android.support.constraint.ConstraintLayout>
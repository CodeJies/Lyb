<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/color_yellow"
    android:layout_height="match_parent">

    <com.codejies.lybwidget.widget.imageview.RoundAngleImageView
        android:id="@+id/item_head"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.codejies.lyb.widgets.LybIconTextView
        android:id="@+id/item_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Story"
        android:textSize="18sp"
        app:direction="left"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_head"
        app:lybDefalutText="@color/color_white"
        app:lybDefaultIcon="@mipmap/bg_meun_default"
        app:lybHighLightIcon="@mipmap/bg_meun_selected"
        app:lybHighLightText="@color/color_dark" />

    <com.codejies.lyb.widgets.LybIconTextView
        android:id="@+id/item_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Setting"
        android:textSize="18sp"
        android:textStyle="bold"
        app:direction="left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_story"
        app:lybDefalutText="@color/color_white"
        app:lybDefaultIcon="@mipmap/bg_meun_default"
        app:lybHighLightIcon="@mipmap/bg_meun_selected"
        app:lybHighLightText="@color/color_dark" />


</android.support.constraint.ConstraintLayout>
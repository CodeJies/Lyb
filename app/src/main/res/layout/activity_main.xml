<?xml version="1.0" encoding="utf-8"?>
<com.codejies.lybwidget.widget.draglayout.DragLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_drawer"
    android:background="@color/color_light_yellow"
    tools:context="com.codejies.lyb.page.home.MainActivity">

    <include layout="@layout/layout_main_drawer" />

    <com.codejies.lybwidget.widget.draglayout.DragRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white">

        <LinearLayout
            android:id="@+id/main_topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_top_drawer_open"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/main_top_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="标题"
                android:textColor="@color/color_dark"
                android:textSize="16sp" />
        </LinearLayout>

        <com.codejies.lybwidget.widget.LybRecycleView
            android:id="@+id/main_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_topbar"></com.codejies.lybwidget.widget.LybRecycleView>
    </com.codejies.lybwidget.widget.draglayout.DragRelativeLayout>
</com.codejies.lybwidget.widget.draglayout.DragLayout>
